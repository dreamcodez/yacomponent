#!/bin/sh -e
if [ -z "$TRAVIS_JOB_ID" ] && [ -z "$COVERALLS" ] ; then
  # local just give me spec output
  node_modules/.bin/mocha --reporter spec --compilers ls:LiveScript test
else
  # coverage with coveralls.io when run on travis ci
  node_modules/.bin/mocha --require blanket --reporter mocha-lcov-reporter --compilers ls:LiveScript test | node_modules/.bin/coveralls
fi
